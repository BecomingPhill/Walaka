    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

        <style name="ProgressBarAppTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
            <item name="android:progressDrawable">@drawable/apptheme_progress_horizontal_holo_light</item>
            <item name="android:indeterminateDrawable">@drawable/apptheme_progress_indeterminate_horizontal_holo_light</item>
        </style>

        <style name="SeekBarAppTheme" parent="android:Widget.Holo.Light.SeekBar">
            <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
            <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
            <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
        </style>

        <style name="RatingBarAppTheme" parent="android:Widget.Holo.Light.RatingBar">
            <item name="android:progressDrawable">@drawable/apptheme_ratingbar_full_holo_light</item>
            <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_full_holo_light</item>
        </style>

        <style name="RatingBarBigAppTheme" parent="android:Widget.Holo.Light.RatingBar.Indicator">
            <item name="android:progressDrawable">@drawable/apptheme_ratingbar_holo_light</item>
            <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_holo_light</item>
        </style>

        <style name="RatingBarSmallAppTheme" parent="android:Widget.Holo.Light.RatingBar.Small">
            <item name="android:progressDrawable">@drawable/apptheme_ratingbar_small_holo_light</item>
            <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_small_holo_light</item>
        </style>

        <style name="ToggleAppTheme" parent="android:Widget.Holo.Light.Button.Toggle">
            <item name="android:background">@drawable/apptheme_btn_toggle_holo_light</item>
        </style>

    <style name="TitleLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleLabel" parent="TitleLabel">
        <item name="android:layout_below">@+id/Title</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="InputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/subtitle</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_vertical_side_margin</item>
        <item name="android:layout_marginRight">@dimen/login_vertical_side_margin</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Theme.Walaka" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_walaka</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Walaka</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Walaka</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Walaka</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Walaka</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Walaka</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_walaka</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_walaka</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Walaka</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>

        <item name="android:textColorHighlight">#99419c28</item>
        <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
        <item name="android:listViewStyle">@style/Theme.Walaka.LightGreenBackground</item>
        <item name="android:gridViewStyle">@style/Theme.Walaka.LightGreenBackground.GridView</item>



    </style>

    <style name="ActionBar.Solid.Walaka" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_walaka</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_walaka</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_walaka</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Walaka</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Walaka.Overflow</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Walaka.TitleTextSyle</item>

    </style>
    
    <style name="Theme.Walaka.LightGreenBackground">
        <item name="android:background">@color/light_green_background</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Theme.Walaka.LightGreenBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="ActionBar.Solid.Walaka.TitleTextSyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/apptheme_color</item>
    </style>
    
    <style name="Theme.Walaka.Overflow" parent="@android:style/Widget.ActionButton.Overflow">

        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Transparent.Walaka" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_walaka</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Walaka</item>
    </style>

    <style name="PopupMenu.Walaka" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_walaka</item>
    </style>

    <style name="DropDownListView.Walaka" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_walaka</item>
    </style>

    <style name="ActionBarTabStyle.Walaka" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_walaka</item>
    </style>

    <style name="DropDownNav.Walaka" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_walaka</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_walaka</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_walaka</item>
    </style>

    <style name="ProgressBar.Walaka" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_walaka</item>
    </style>

    <style name="ActionButton.CloseMode.Walaka" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_walaka</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Walaka.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Walaka</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Walaka</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


</resources>
